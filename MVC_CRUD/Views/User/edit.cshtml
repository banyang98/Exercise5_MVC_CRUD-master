@{
    ViewData["Title"] = "Update Information";
}


<h2>Update Form</h2>

<form asp-action="edit" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label class="form-label">Name</label>
        <input class="form-control" asp-for="Name" />
        <span class="text-dange" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Address</label>
        <input class="form-control" asp-for="Address" />
        <span class="text-dange" asp-validation-for="Address"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Course</label>
        <input class="form-control" asp-for="Course" />
        <span class="text-dange" asp-validation-for="Course"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Age</label>
        <input class="form-control" asp-for="Age" />
        <span class="text-dange" asp-validation-for="Age"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Gender</label>
        <input class="form-control" asp-for="Gender" />
        <span class="text-dange" asp-validation-for="Gender"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Phone Number</label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span class="text-dange" asp-validation-for="PhoneNumber"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Email Address</label>
        <input class="form-control" asp-for="EmailAddress" />
        <span class="text-dange" asp-validation-for="EmailAddress"></span>
    </div>

    

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
